<Window x:Class="RestaurantTableTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantTableTracker"
        mc:Ignorable="d"
        Title="Restaurant Table Tracker" Height="600" Width="1000" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid>
        <WrapPanel x:Name="pnlTables" HorizontalAlignment="Center" Margin="0,10,0,0">
        </WrapPanel>
        <StatusBar VerticalAlignment="Bottom">
            <Label Name="lblConnStatus" Content="Offline" Background="Crimson" Foreground="White" />
            <Label Name="lblLastAction" />
        </StatusBar>
    </Grid>
</Window>
